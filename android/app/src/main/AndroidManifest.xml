<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/logo_1"
        android:roundIcon="@mipmap/logo_1"
        android:allowBackup="false"
        android:theme="@style/AppTheme">

        <!-- Original Launcher Icon -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/logo_1"
            android:roundIcon="@mipmap/logo_1"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">

            <!-- remove later try -->
            <intent-filter>
                <!-- <action android:name="android.intent.action.MAIN" /> -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <!-- Activity aliases for dynamic icon changing -->
        <activity-alias
            android:name="com.sutradhar.MainActivitylogo_1"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/logo_1"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.sutradhar.MainActivitylogo_2"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/logo_2"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.sutradhar.MainActivitylogo_3"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/logo_3"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.sutradhar.MainActivitylogo_4"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/logo_4"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name="com.sutradhar.MainActivitylogo_9"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/logo_9"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

    </application>

</manifest>
